{
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "%app.tabBar.index%"
      }
    },
    {
      "path": "pages/pinia/index",
      "style": {
        "navigationBarTitleText": "%app.tabBar.pinia%"
      }
    },
    {
      "path": "pages/locale/index",
      "style": {
        "navigationBarTitleText": "%app.tabBar.locale%"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#007AFF",
    "borderStyle": "black",
    "backgroundColor": "#F8F8F8",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "%app.tabBar.index%"
      },
      {
        "pagePath": "pages/pinia/index",
        "text": "%app.tabBar.pinia%"
      },
      {
        "pagePath": "pages/locale/index",
        "text": "%app.tabBar.locale%"
      }
    ]
  }
}
